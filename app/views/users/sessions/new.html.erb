<h1>ログイン</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
  <%= f.label :"名前" %><br />
    <%= f.text_field :name, class: "session-field", autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
  <%= f.label :"Ｅメール" %><br />
    <%= f.email_field :email, class: "session-field", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, class: "session-field", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"保存する", class: "session-field" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary session-field" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
